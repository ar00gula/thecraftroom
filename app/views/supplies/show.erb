<p><%=link_to "Back to Supply Categories", supply_categories_path %></p>

<h2 class="page-heading"><%= @supply.name %></h2>
<h3 class="category link">Category: <%= link_to  @supply.supply_category.name, supply_category_path(@supply.supply_category_id) %></h3>
<ul class="no-bullets">
    <h4>Notes:</h4>
        <% if @supply.notes != "" %>
            <li><%= @supply.notes%></li>
        <% end %>

    <%= form_with model: @supply, local: true do |f| %>
    <h4 class="inline">In Stock?</h4>
    <input type="submit" class="page-button" value="Update">
    <ul>
        <div class="inline">
            <%= f.radio_button :in_stock, true, :checked => @supply.in_stock==true %>
            <%= f.label :in_stock, "Yes" %>
            <%= f.radio_button :in_stock, false, :checked => !@supply.in_stock==true %>
            <%= f.label :in_stock, "No" %>
        </div>
    </ul>
    <%end%>
</ul>


<p class="link"><%= link_to "Edit Supply Info", edit_supply_path(@supply) %></p>
<p class ="link"><a href=<%=supply_path(@supply)%> data-confirm="Are you sure you wish to delete this supply?" data-method="delete">Delete Supply?</a></p>

<br>
<br>


<br>
<br>
<footer>Most Recent Update: <%= @supply.updated_at %></footer>
