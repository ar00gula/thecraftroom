<h2><%= @craft.name %></h2>
<h3><%= @craft.notes %> make this be in a lil info box</h3>
<h4>Supplies</h4>
<ul>
<% @craft.supplies.each do |supply| %>
    <% if supply.in_stock %>
        <li><%= supply.name %></li>
    <% else %>
        <li class="strike"><%= supply.name %></li>
    <% end %>
<% end %>
</ul>

<%= link_to "Edit Supplies", edit_craft_path(@craft) %>
