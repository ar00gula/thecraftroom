<h2><%= @craft.name %></h2>
<h3><%= @craft.notes %> make this be in a lil info box</h3>
<h4>Supplies</h4>
<ul>
<% @craft.supplies.each do |supply| %>
    <% if supply.in_stock %>
        <li><%= supply.name %></li>
    <% else %>
        <li class="strike"><%= supply.name %></li>
    <% end %>
<% end %>
</ul>

<p><%= "#{@craft.supplies.in_stock.count} of #{@craft.supplies.count} supplies in stock." %></p>

<p><%= link_to "Assign Supplies", edit_craft_path(@craft) %></p>
<p><%= link_to "Log New Supplies", new_supply_path %></p>

